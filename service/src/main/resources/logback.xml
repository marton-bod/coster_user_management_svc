<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>coster_user_mgmt_svc.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>

</configuration>